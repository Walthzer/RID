{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "hemtt build",
            "type": "shell",
            "command": "hemtt build"
        },
        {
            "label": "Start Arma 3 (RidDevVR Editing)",
            "dependsOn": ["hemtt build"],
            "type": "process",
            "options": {
                "cwd": "N:\\SteamLibrary\\steamapps\\common\\Arma 3" // Change to your Arma 3 installation path
            },
            "command": "arma3_x64", // Also possible, if available: arma3profiling_x64, arma3diag_x64
            "args": [
                "C:\\Users\\NKvD Officer Walthze\\Documents\\Arma 3 - Other Profiles\\PFC%20D%2e%20Shark\\missions\\RidDevVR.VR\\mission.sqm", // Loads directly into editor if you have a mission folder open in VSCode
                "-mod=!Workshop\\@CBA_A3;!Workshop\\@ace;!Workshop\\@3den Enhanced;!Workshop\\@Zeus Enhanced;!Workshop\\@Zeus Enhanced - ACE3 Compatibility;N:\\ArmaGithubAddonRepositories\\RID", // Add mods seperated by ";", absolute paths work as well
                "-debug",
                "-skipIntro",
                //"-window",
                "-noSplash",
                "-showScriptErrors"
            ],
            // Enable launching via shortcut "Tasks: Run Test Task"
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Stop Arma 3",
            "type": "shell",
            "command": "taskkill",
            "args": [
                "/F",
                "/IM",
                "arma3_x64.exe" // Other values: arma3diag_x64.exe, arma3profiling_x64.exe
            ],
            "problemMatcher": []
        },
        {
            "label": "RPT Watcher",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-command",
                "Get-ChildItem -Path $env:USERPROFILE\\AppData\\Local\\Arma` 3 -Filter *.rpt | Sort-Object LastAccessTime -Descending | Select-Object -First 1 | Get-Content -Tail 1 -Wait -Encoding utf8"
            ],
            "problemMatcher": []
        }
    ]
}

